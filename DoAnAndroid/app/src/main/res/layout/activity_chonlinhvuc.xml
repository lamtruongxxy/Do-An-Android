    <ImageView
        android:id="@+id/imgtraitim9"
        android:layout_width="28dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtTenTk3"
        app:layout_constraintEnd_toEndOf="@+id/txtTenTk3"
        app:layout_constraintTop_toTopOf="@+id/txtTenTk3"
        app:srcCompat="@drawable/icontym" />

    <ImageView
        android:id="@+id/imgcredit3"
        android:layout_width="26dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtSoCredit3"
        app:layout_constraintStart_toEndOf="@+id/txtSoCredit3"
        app:layout_constraintTop_toTopOf="@+id/txtSoCredit3"
        app:srcCompat="@drawable/icon_credit" />

    <TextView
        android:id="@+id/txtChonLinhVuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Chọn Lĩnh Vực"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTenTk3" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="28dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgtraitim6"
        app:layout_constraintEnd_toStartOf="@+id/imgtraitim6"
        app:layout_constraintTop_toTopOf="@+id/imgtraitim6"
        app:srcCompat="@drawable/icontym" />

    <Button
        android:background="@drawable/botron_buttonlinhvuc"
        android:id="@+id/btnLinhVuc2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
