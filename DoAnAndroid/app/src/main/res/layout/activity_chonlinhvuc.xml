        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgtraitim9"
        app:layout_constraintEnd_toStartOf="@+id/imgtraitim9"
        app:layout_constraintTop_toTopOf="@+id/imgtraitim9"
